{
    "manifest_version": 3,
    "name": "YouTube Timestamp Saver",
    "version": "1.0",
    "permissions": ["storage", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
    }],
    "action": {
        "default_popup": "popup.html"
    }
}
